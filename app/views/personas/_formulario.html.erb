<%= form_for(@persona, :html => {:role => 'form'}) do |f| %>
    <% if @persona.errors.any? %>
        <%= pluralize(@persona.errors.count, "Errores") %>
        <% @persona.errors.full_messages.each do |error| %>
            <%= error %>
        <% end %>
    <% end %>
    <%= f.label :nombres %>
    <%= f.text_field :nombres %>

    <%= f.label :apellidos %>
    <%= f.text_field :apellidos %>

    <%= f.label :fecha_nacimiento %>
    <%= f.text_field :fecha_nacimiento %>

    <%= f.label :direccion %>
    <%= f.text_field :direccion %>

    <%= f.submit %>
<% end %>
